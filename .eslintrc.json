{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
        "node",
        "standard"
    ],
    "extends": [
        "standard",
        "plugin:node/recommended",
        "plugin:import/recommended"
    ],
    "rules": {
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "indent": [
            "error",
            4
        ],
        "no-process-exit": "off",
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "node/no-unsupported-features": "off",
        "node/shebang": "off"
    }
}
